extends base
- var current_title = page.title || tag.name || category.name || site.title

block title
  title= current_title

block content
  .post
    .post-archive
        //Use lodash to classify posts. See https://lodash.com/docs#groupBy
        each posts, year in _.groupBy(page.posts.toArray(), function(p){return -p.date.format('YYYY')})
          h2= -year
          ul.listing
            for post in posts
              li
                span.date= post.date.format('l')
                a(href=url_for(post.path), title=post.title)
                  +title(post)
  include _partial/paginator.jade
